{
  "name": "preffy-video-flow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ./gradlew bootRun --args='--spring.profiles.active=local'",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "./start-dev.sh",
    "dev:db": "cd backend && docker-compose up mysql phpmyadmin redis",
    "dev:services": "cd backend && docker-compose up",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && ./gradlew build",
    "build:frontend": "cd frontend && npm run build",
    "build:frontend-only": "cd frontend && npm ci && npm run build",
    "start": "cd backend && java -jar build/libs/*.jar",
    "install:all": "cd frontend && npm install",
    "lint": "cd frontend && npm run lint",
    "preview": "cd frontend && npm run preview",
    "test:backend": "cd backend && ./gradlew test",
    "clean": "cd backend && ./gradlew clean",
    "clean:all": "npm run clean && cd frontend && rm -rf node_modules && npm install",
    "logs:backend": "cd backend && docker-compose logs -f",
    "logs:db": "cd backend && docker-compose logs -f mysql",
    "stop": "cd backend && docker-compose down",
    "reset:db": "cd backend && docker-compose down -v && docker-compose up -d mysql",
    "deploy": "npm run build:frontend && firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "firebase:serve": "npm run build:frontend && firebase serve"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
